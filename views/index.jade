extends layout

var message = #{message}

block content
    div.container
        form.form-horizontal(action="/login" method="post" class="form-signin")
            h2.form-signin-heading.text-center Area monitores

            if message != ""
                div(class="alert alert-danger alert-dismissible" role="alert") #{message}
            div.form-group
                label(for="inputUsername" class="sr-only") Username
                input(type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus)
            div.form-group
                label(for="inputUsername" class="sr-only") Password
                input(type="password" class="form-control" name="password" placeholder="Password" required)

            input(type="submit" value="Sign in" class="btn btn-lg btn-primary btn-block")