doctype html

html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title=title_page
        // Tell the browser to be responsive to screen width
        meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')

        // Bootstrap 3.3.5
        link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css')
        // Font Awesome
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        // Ionicons
        link(rel='stylesheet', href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
        // Theme style
        link(rel='stylesheet', href='dist/css/AdminLTE.min.css')
        // AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
        link(rel='stylesheet', href='dist/css/skins/skin-blue.min.css')
        // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        //if lt IE 9
          script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
          script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

    body.hold-transition.skin-blue.sidebar-mini
        .wrapper
            header.main-header
                a.logo(href='/')
                    span.logo-mini
                        b C
                        | T
                    // logo for regular state and mobile devices
                    span.logo-lg
                        b Camp
                        | Tecnológico
                nav.navbar.navbar-static-top(role='navigation')
                    // Sidebar toggle button
                    a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
                        span.sr-only Toggle navigation
                    // Navbar Right Menu
                    .navbar-custom-menu
                        ul.nav.navbar-nav
                            // Messages: style can be found in dropdown.less
                            li.dropdown.messages-menu
                                // Menu toggle button
                                a.dropdown-toggle(href='#', data-toggle='dropdown')
                                    i.fa.fa-envelope-o
                                    span.label.label-success 2
                                ul.dropdown-menu
                                    li.header Tienes 2 mensajes
                                    li
                                        // inner menu: contains the messages
                                        ul.menu
                                            li
                                                // start message
                                                a(href='#')
                                                    .pull-left
                                                        // User Image
                                                        img.img-circle(src='#{user_image}', alt='User Image')
                                                        // Message title and timestamp
                                                    h4
                                                        | Equipo de soporte
                                                        small
                                                            i.fa.fa-clock-o
                                                            |  5 min
                                                    // The message
                                                    p Prueba
                                                // end message
                                                // start message
                                                a(href='#')
                                                    .pull-left
                                                        // User Image
                                                        img.img-circle(src='#{user_image}', alt='User Image')
                                                        // Message title and timestamp
                                                    h4
                                                        | Equipo de soporte
                                                        small
                                                            i.fa.fa-clock-o
                                                            |  6 min
                                                    // The message
                                                    p Prueba
                                                // end message                                                
                                        // /.menu
                                    li.footer
                                        a(href='#') See All Messages
                            // /.messages-menu

                            // Notifications Menu
                            li.dropdown.notifications-menu
                                // Menu toggle button
                                a.dropdown-toggle(href='#', data-toggle='dropdown')
                                    i.fa.fa-bell-o
                                    span.label.label-warning 1
                                ul.dropdown-menu
                                    li.header Tienes 1 notificaciones
                                    li
                                        // Inner Menu: contains the notifications
                                        ul.menu
                                          li
                                            // start notification
                                            a(href='#')
                                              i.fa.fa-users.text-aqua
                                              |  Prueba
                                            // end notification
                                    li.footer
                                        a(href='#') Ver todas
                            // /.notifications-menu
                          
                            // User Account Menu
                            li.dropdown.user.user-menu
                                // Menu Toggle Button
                                a.dropdown-toggle(href='#', data-toggle='dropdown')
                                    // The user image in the navbar
                                    img.user-image(src='#{user_image}', alt='User Image')
                                    // hidden-xs hides the username on small devices so only the image appears.
                                    span.hidden-xs #{user_name}
                                ul.dropdown-menu
                                    // The user image in the menu
                                    li.user-header
                                        img.img-circle(src='#{user_image}', alt='User Image')
                                        p
                                            | #{user_name}
                                            small #{user_role}
                                    li.user-footer
                                        .pull-left
                                            a.btn.btn-default.btn-flat(href='#') Cambiar contraseña
                                        .pull-right
                                            a.btn.btn-default.btn-flat(href='/logout') Cerrar sesión

            // Left side column. contains the logo and sidebar
            aside.main-sidebar
                // sidebar: style can be found in sidebar.less
                section.sidebar
                    // Sidebar user panel (optional)
                    .user-panel
                        .pull-left.image
                            img.img-circle(src='#{user_image}', alt='User Image')
                        .pull-left.info
                            p #{user_name}
                    block sidebar
                        // Sidebar Menu
                        ul.sidebar-menu
                            if user_role!="Coordinador"
                                li.header MENÚ DE PROFESOR
                                // Optionally, you can add icons to the links
                                li
                                    a(href='/')
                                        i.fa.fa-home
                                        span Inicio
                                //li
                                    a(href='#')
                                        i.fa.fa-glass
                                        span Mis talleres                
                                li 
                                    a(href='/my-schools')
                                        i.fa.fa-graduation-cap
                                        span Mis extraescolares
                                //li
                                    a(href='#')
                                        i.fa.fa-files-o
                                        span Documentacion
                                //li
                                    a(href='#')
                                        i.fa.fa-download
                                        span Descargas                
                                //li.treeview
                                    a(href='#')
                                        i.fa.fa-gear
                                        span Otros
                                            i.fa.fa-angle-left.pull-right
                                //ul.treeview-menu
                                  li
                                    a(href='#')
                                      i.fa.fa-slack
                                      span Unirse a Slack
                            else
                                li.header MENÚ DE COORDINADOR
                                li
                                    a(href='/')
                                        i.fa.fa-home
                                        span Inicio
                                li
                                    a(href='/users')
                                        i.fa.fa-users
                                        span Gestion de usuarios
                                li
                                    a(href='/import-activities')
                                        i.fa.fa-calendar-check-o
                                        span Importar actividades                            
                                li
                                    a(href='/import-students')
                                        i.fa.fa-users
                                        span Importar estudiantes
                        // /.sidebar-menu   
                // /.sidebar

            // Content Wrapper. Contains page content
            .content-wrapper
                block content
            // /.content-wrapper

            // Main Footer
            footer.main-footer
                // To the right
                .pull-right.hidden-xs
                    | Scientia potentia est
                // Default to the left
                strong
                    | Copyright © 2015 
                    a(href='http://camptecnologico.com/') CampTecnologico
                    | .
                |  All rights reserved.
            //
                Add the sidebar's background. This div must be placed
                immediately after the control sidebar
            .control-sidebar-bg
        // ./wrapper

        // REQUIRED JS SCRIPTS

        // jQuery 2.1.4
        script(src='plugins/jQuery/jQuery-2.1.4.min.js')
        // Bootstrap 3.3.5
        script(src='bootstrap/js/bootstrap.min.js')
        // AdminLTE App
        script(src='dist/js/app.min.js')
        //
            Optionally, you can add Slimscroll and FastClick plugins.
            Both of these plugins are recommended to enhance the
            user experience. Slimscroll is required when using the
            fixed layout.
        script(src="plugins/slimScroll/jquery.slimscroll.min.js")
        script(src="plugins/fastclick/fastclick.js")
              