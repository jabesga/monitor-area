doctype html
html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/dashboard.css')
        style.
            body{
                overflow-x: hidden;
            }

    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container-fluid
                div.navbar-header
                    button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Camptecnologico
                div.navbar-collapse.collapse(id='navbar' aria-expanded='false' style='height=1px;')
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') Mi perfil
                        li
                            a(href='/logout') Logout
        div.container-fluid
            div.row
                div.col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li
                            a(href='/') Inicio
                            span.sr-only (current)
                    ul.nav.nav-sidebar
                        li
                            a(href='/import-monitors') Importar monitores
                        li                        
                            a(href='/import-classrooms') Importar clases
                    ul.nav.nav-sidebar
                        li
                            a(href='/monitors') Lista de Monitores
                        li.active
                            a(href='/classrooms') Lista de Clases y colegios
                    ul.nav.nav-sidebar                                                    
                        li
                            a(href='/technologies') Tecnologias

                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main

                    h1.page-header Todos los colegios

                    each school in list_of_schools
                        h2.sub-header #{school.school_name}
                        
                        button(type="button" class="btn btn-info" data-toggle="collapse" data-target="##{school.school_name}") Ver clases
                        div.collapse(id="#{school.school_name}")
                            each element in school.school_classrooms
                                h4.sub-header #{element.code_name}
                                button(type="button" class="btn btn-info" data-toggle="collapse" data-target="##{element.code_name}") Mostrar lista
                                
                                div.table-responsive.collapse(id="#{element.code_name}")
                                    table.table.table-striped
                                        thead
                                            tr
                                                th Nombre
                                                th Apellido 1
                                                th Apellido 2
                                                th Edad
                                        tbody
                                            each student in element.students
                                                tr
                                                    td #{student.nombre}
                                                    td #{student.apellido1}
                                                    td #{student.apellido2} 
                                                    td #{student.edad}                                             

        script(src="/javascripts/jquery.min.js")
        script(src="/javascripts/bootstrap.min.js")